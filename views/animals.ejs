<!DOCTYPE html>
<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <%- include('./partials/navbar.ejs', {user: user}) %> 
    <h2 class="p-3">Animals</h2>
    <div class="list-group">
      <div class="row px-3 py-1 w-100">
        <span class="col py-1 bg-info">Name</span>
        <span class="col py-1 bg-info">Species</span>
        <span class="col py-1 bg-info">Birthday</span>
      </div>
    <% animals.forEach(function(animal) { %>
        <div class="row px-3 py-1 w-100">
          <span class="col py-1 bg-light"><%=animal.Name%></span>
          <span class="col py-1 bg-light"><%=animal.Species%></span>
          <span class="col py-1 bg-light"><%=animal.Birthday.toLocaleDateString()%></span>
        </div>
      <% }); %>
    </div>
  </body>
</html>
